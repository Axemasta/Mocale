<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="Mocale.Samples.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:keys="clr-namespace:Mocale.Translations"
    xmlns:mocale="http://axemasta.com/schemas/2022/mocale"
    xmlns:pages="clr-namespace:Mocale.Samples.Pages">


    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <Tab Title="{mocale:Localize Key={x:Static keys:TranslationKeys.IntroductionPageTitle}}">
            <ShellContent Title="{mocale:Localize Key={x:Static keys:TranslationKeys.IntroductionPageTitle}}" ContentTemplate="{DataTemplate pages:IntroductionPage}" />
        </Tab>

        <Tab Title="{mocale:Localize Key={x:Static keys:TranslationKeys.BindingPageTitle}}">
            <ShellContent Title="{mocale:Localize Key={x:Static keys:TranslationKeys.BindingPageTitle}}" ContentTemplate="{DataTemplate pages:BindingPage}" />
        </Tab>

        <Tab Title="{mocale:Localize Key={x:Static keys:TranslationKeys.ParameterPageTitle}}">
            <ShellContent Title="{mocale:Localize Key={x:Static keys:TranslationKeys.ParameterPageTitle}}" ContentTemplate="{DataTemplate pages:ParameterPage}" />
        </Tab>

    </FlyoutItem>
</Shell>
